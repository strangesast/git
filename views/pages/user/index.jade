extends ../full_workspace

block workspace
  .container
    .full
      if user
        h2 You are logged in as
        h1 #{user.name} (#{user.username})
        span=user._id

      else
        h1 You are not logged in.

        a(href='/app/user/login') Log in

      h1 Your jobs

      if jobs.length
        each job in jobs
          div
            a(href='/app/build/#{job._id}')
              h3=job.name
            p Created #{job.createdAt}
      else
        p No jobs.

      a(href='/app/build/') Create new job
