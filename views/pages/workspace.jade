extends ../layout

block content
  .outer
    .header
      .container
        a.icon(href='/')
          span.fa.fa-bars.fa-lg
          span.site-title Estimating
        span.title
          block title
            | Title
        .dropdown.bottom
          a.icon(href='/app/user')
            span.fa.fa-user.fa-lg
            if user
              span.user-title=user.username
            else
              span.user-title User
          .dropdown-body
            if user
              a(href='/app/user/')
                span Your jobs
              a(href='/app/user/logout')
                span Log out
            else
              a(href='/app/user/login')
                span Log in

    block body

    .footer
      .container

